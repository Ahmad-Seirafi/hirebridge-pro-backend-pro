NODE_ENV=development
PORT=3000
# Local MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/hirebridge
# Docker MongoDB (with auth)
# MONGO_URI=mongodb://root:root@mongo:27017/hirebridge?authSource=admin

JWT_ACCESS_SECRET=change-this-access-secret
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Uploads
UPLOAD_MAX_SIZE_MB=5
UPLOAD_MIME_ALLOW=image/

# CORS allowed origins (comma-separated). Leave empty = allow all.
CORS_ORIGINS=
